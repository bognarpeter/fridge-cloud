<div class="main-container" align="center">
  <div class="container">
    <div class="row">
      <div class="col s12">
      {{# if recipeResult }}
      <div class="recipe-container container">
        <div class="row">
        {{# each recipeResult as |r key|}}
        <div col s6>
          <img src="{{ r.image }}"/>
        </div>
        <div col s6>
          <h1>{{ r.name }}</h1>
          <p>{{ r.ingredients }}</p>
        </div>
        {{/each}}
        </div>
      {{/if}}
     </div>
    </div>
  </div>
</div>
