    "definitions": {
        "Food": {
            "type": "object",
            "required": [
                "name",
                "type",
                "offeredBy",
                "amount",
                "unit",
                "location"
                        ],
            "properties": {
                "id": {
                    "type": "integer",
                    "format": "int64"
                },
                "name": {
                    "type": "string",
                    "example": "apple"
                },
                "type": {
                    "type": "string",
                    "example": "vegetable"
                },
                "blockedBy": {
                    "type": "string",
                    "example": "Peter"
                },
                "offeredBy": {
                    "type": "string",
                    "example": "Simon"
                },
                "amount": {
                    "type": "integer",
                    "format": "int64"
                },
                "unit": {
                    "type": "string",
                    "example": "Pieces"
                },
                "expiration_date": {
                    "type": "string",
                    "format": "date-time"
                },
                "image": {
                    "type": "string",
                    "example": "https://google.de/image.jpg"
                },
                "location": {
                    "$ref": "#/definitions/Location"
                }
            }
        },
        "Location": {
            "type": "object",
            "required": [
                "lon",
                "lat"
            ],
            "properties": {
                "lon": {
                    "type": "number",
                    "format": "float"
                },
                "lat": {
                    "type": "number",
                    "format": "float"
                }
            }
        }
